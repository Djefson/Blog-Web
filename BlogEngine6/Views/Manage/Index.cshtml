@model BlogEngine6.Models.IndexViewModel
@{
    ViewBag.Title = "Manage";
}

<h2>@ViewBag.Title.</h2>

<p class="text-success">@ViewBag.StatusMessage</p>
<div>
    <h4>Change your account settings</h4>

    @if (Request.IsAuthenticated && User.IsInRole("Editor"))
    {
       
            @Html.ActionLink("Editor Panel", "Index", "Editor", routeValues: null, htmlAttributes: new { title = "Editor Panel", @class="btn btn-success" })

    }

    @if (Model.HasPassword)
    {
        @Html.ActionLink("Change your password", "ChangePassword", "Account", routeValues: null, htmlAttributes: new { title = "Change Password", @class = "btn btn-danger" })
    }
 
</div>
