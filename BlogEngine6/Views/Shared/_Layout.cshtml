@using BlogEngine6.WebUI.HtmlHelpers
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - LIFE-EXPERIENCE-Blog</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" style="background-color:orangered">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("LIFE_EXPERIENCE", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse"style="background-color:orangered">
                <ul class="nav navbar-nav">
                    <li class="@Html.ActivePage("Home", "About")">@Html.ActionLink("About", "About", "Home")</li>
                    <li class="@Html.ActivePage("Home", "Contact")">@Html.ActionLink("Contact", "Contact", "Home")</li>
                    <li class="@Html.ActivePage("Blogs", null)">@Html.ActionLink("Browse Blogs", "Index", "Blogs")</li>
                    <li class="@Html.ActivePage("MyBlog", null)">@Html.ActionLink("My Blog", "Index", "MyBlog", null, new { @class = "requireLogin" })</li>   
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
    </div>

    @if (!Request.IsAuthenticated) { 
        {Html.RenderAction("LoginPartial", "Account");}
        {Html.RenderAction("RegisterPartial", "Account");}
    }

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/custom")
    @RenderSection("scripts", required: false)


@if (Request.IsAuthenticated)
{
    <script>
        var IS_AUTH = true;
    </script>
}


</body>
</html>
