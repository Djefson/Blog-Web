@model IEnumerable<BlogEngine6.Models.Tag>

@{
    ViewBag.Title = "Index";
}

<h2>Add New Tags</h2>

<p>
     @Html.ActionLink("New Tags", "Create", null, new { @class = "btn btn-success" })
  
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.TagID }, new { @class = "btn btn-warning" }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.TagID }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
